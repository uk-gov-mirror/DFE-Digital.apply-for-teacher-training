    <dt class="govuk-summary-list__key">
      Date submitted
    </dt>
    <dd class="govuk-summary-list__value">
      <%= submitted_at_date %>
    </dd>
  </div>
</dl>

<%= render 'candidate_interface/application_form/review', application_form: @application_form, editable: false %>
